    {{#if authenticated }}
        <div class="leave-comment"><!--leave comment-->
        <h4>Leave a reply</h4>
        <form class="form-horizontal contact-form" role="form" method="post" action="/add_comment/">
            {{#each blog}}
                    <input type="hidden" name="post_id" value="{{id}}">
            {{/each}}
            <div class="form-group">
                <div class="col-md-12">
                    <textarea class="form-control" rows="6" name="message" placeholder="Write Massage"></textarea>
                </div>
            </div>
            <input type="submit" class="btn send-btn" value="Post Comment"/>
        </form>
