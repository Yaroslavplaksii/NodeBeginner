<aside class="widget pos-padding">
    <h3 class="widget-title text-uppercase text-center">Recent Posts</h3>
    {{#if recent}}
            {{#each recent}}
            <div class="thumb-latest-posts">
                <div class="media">
                    <div class="media-left">
                        <a href="/blog/{{slug}}" class="popular-img"><img src="/images/{{image}}" alt="{{title}}">
                            <div class="p-overlay"></div>
                        </a>
                    </div>
                    <div class="p-content">
                        <a href="/blog/{{slug}}" class="text-uppercase">{{title}}</a>
                        <span class="p-date">{{date}}</span>
                    </div>
                </div>
            </div>
            {{/each}}
    {{else}}
        No posts
    {{/if}}
</aside>